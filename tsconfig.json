{
  "compilerOptions": {
    // "module": "es2022", // 或 "esnext", "node16", "node18", "nodenext"
    // "target": "es2022", // 可选但推荐
    "target": "ES2020",
    "module": "ESNext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node", "vite/client"],
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo",
    "strict": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": true,
    // "lib": [
    //   // "es2015",
    //   "es2016",
    //   "es2020",
    //   "es2022",
    //   "dom"
    // ],
    // 自定义配置
    "noImplicitAny": false, // 禁用 隐式的any错误
    "removeComments": true, // 移除 ts注释
    "experimentalDecorators": true, // 启用实验性的装饰器支持
    "strictFunctionTypes": false, // 禁用严格函数类型检查
    "strictNullChecks": false, // 禁用严格的空值检查
    "allowSyntheticDefaultImports": true, // 允许默认导入
    "forceConsistentCasingInFileNames": true // 强制在文件名中使用一致的大小写
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "vite.config.ts",
    "vitest.config.ts",
    "eslint.config.ts",
    "src/**/*.d.ts",
    "src/vite-env.d.ts"
  ],
  "exclude": ["node_modules", "dist", "src/**/__tests__/*"]
}
